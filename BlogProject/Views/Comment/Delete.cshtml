@model Comment
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Yorum Sil";
}

<h2>Yorumu Sil</h2>

<div class="alert alert-warning">
    <strong>Dikkat!</strong> Bu yorum kalıcı olarak silinecek. Emin misiniz?
</div>

<dl class="row">
    <dt class="col-sm-2">Yazan</dt>
    <dd class="col-sm-10">@Model.User?.UserName</dd>

    <dt class="col-sm-2">İçerik</dt>
    <dd class="col-sm-10">@Model.Content</dd>

    <dt class="col-sm-2">Tarih</dt>
    <dd class="col-sm-10">@Model.CreatedAt</dd>

    <dt class="col-sm-2">Blog</dt>
    <dd class="col-sm-10">@Model.Post?.Title</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>