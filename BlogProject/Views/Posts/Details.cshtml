@model BlogProject.Models.Post

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <h2>@Model.Title</h2>
    <p class="text-muted">Yazar: @Model.User?.Username | Kategori: @Model.Category?.Name | @Model.CreatedAt.ToShortDateString()</p>
    <hr />
    <p>@Model.Content</p>

    <hr />
    <h4>Yorumlar</h4>

    @if (Model.Comments.Any())
    {
        <ul class="list-group mb-3">
            @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
            {
                <li class="list-group-item">
                    <strong>@comment.User?.Username</strong> <small class="text-muted">@comment.CreatedAt.ToShortDateString()</small>
                    <p>@comment.Content</p>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Henüz yorum yok.</p>
    }

    <h5>Yorum Yaz</h5>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <form asp-action="AddComment" method="post">
        <input type="hidden" name="postId" value="@Model.Id" />
        <div class="mb-3">
            <textarea class="form-control" name="content" rows="3" placeholder="Yorumunuzu yazınız..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary mt-3">Geri Dön</a>
</div>
