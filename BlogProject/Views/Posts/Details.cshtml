@model BlogProject.Models.Post

@{
    ViewData["Title"] = Model.Title;
}

<style>
    body {
        background-color: #f8fafc; /* Çok açık mavi-gri ton */
    }

    .container {
        max-width: 75%;
        width: 90%;
        background: #ffffffcc;
        padding: 30px 35px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 123, 255, 0.1);
        margin: 0px auto 60px auto;
        color: #222;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-width: 320px;
    }

    h2 {
        color: #007bff;
        font-weight: 700;
        letter-spacing: 1.2px;
        margin-bottom: 10px;
    }

    .text-muted {
        color: #6c757d !important;
        font-weight: 600;
        margin-bottom: 20px;
        font-size: 0.9rem;
    }

    hr {
        border-color: #ddd;
        margin: 25px 0;
    }

    p {
        line-height: 1.6;
        font-size: 1.05rem;
    }

    ul.list-group {
        max-height: 250px;
        overflow-y: auto;
        margin-bottom: 20px;
    }

    .list-group-item {
        border-radius: 8px;
        margin-bottom: 10px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        padding: 12px 15px;
    }

        .list-group-item strong {
            color: #007bff;
        }

        .list-group-item small {
            color: #6c757d;
            font-weight: 600;
            margin-left: 10px;
        }

    textarea.form-control {
        border-radius: 8px;
        border: 1.5px solid #ced4da;
        transition: border-color 0.25s ease;
        resize: vertical;
    }

        textarea.form-control:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 5px rgba(74, 144, 226, 0.5);
        }

    .btn-primary {
        background-color: #4a90e2;
        border-color: #4a90e2;
        padding: 8px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #357ABD;
            border-color: #357ABD;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        padding: 8px 24px;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.3s ease;
        color: white;
        margin-top: 15px;
        display: inline-block;
    }

        .btn-secondary:hover {
            background-color: #565e64;
            border-color: #565e64;
            color: white;
        }

    .alert-danger {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
    }
</style>

<div class="container">
    <h2>@Model.Title</h2>
    <p class="text-muted">Yazar: @Model.User?.UserName | Kategori: @Model.Category?.Name | @Model.CreatedAt.ToShortDateString()</p>
    <hr />
    <p>@Model.Content</p>

    <hr />
    <h4>Yorumlar</h4>

    @if (Model.Comments.Any())
    {
        <ul class="list-group">
            @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
            {
                <li class="list-group-item">
                    <strong>@comment.User?.UserName</strong> <small>@comment.CreatedAt.ToShortDateString()</small>
                    <p>@comment.Content</p>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Henüz yorum yok.</p>
    }

    <h5>Yorum Yaz</h5>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    <form asp-action="AddComment" method="post" novalidate>
        <input type="hidden" name="postId" value="@Model.Id" />
        <div class="mb-3">
            <textarea class="form-control" name="content" rows="3" placeholder="Yorumunuzu yazınız..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div>