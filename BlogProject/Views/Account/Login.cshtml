@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    body {
        background-color: #f8fafc; /* Çok açık mavi-gri ton */
    }

    .container {
        max-width: 50%;
        background: #ffffffcc; /* Transparan beyaz */
        padding: 30px 35px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 123, 255, 0.1);
        margin-top: 20px;
        color: #222;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #007bff;
        font-weight: 700;
        letter-spacing: 1.2px;
        margin-bottom: 25px;
        text-align: center;
    }

    label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 8px;
        border: 1.5px solid #ced4da;
        transition: border-color 0.25s ease;
    }

        .form-control:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 5px rgba(74, 144, 226, 0.5);
        }

    .text-danger {
        font-weight: 600;
        margin-bottom: 15px;
        text-align: center;
    }

    .form-check-label {
        font-weight: 600;
        color: #333;
    }

    .btn-primary {
        background-color: #4a90e2;
        border-color: #4a90e2;
        padding: 12px 0;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #357abd;
            border-color: #357abd;
        }

    .text-center a {
        color: #4a90e2;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .text-center a:hover {
            color: #357abd;
            text-decoration: underline;
        }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Login" method="post" novalidate>
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="email" class="form-label">E-Mail</label>
            <input type="text" class="form-control" id="email" name="email" placeholder="Mail adresinizi girin" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Şifre</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin" />
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe" />
            <label class="form-check-label" for="rememberMe">Beni Hatırla</label>
        </div>

        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Register">Hesabınız yok mu? Kayıt Ol</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
