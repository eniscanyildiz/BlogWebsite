@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="mb-4">Kayıt Ol</h2>

    <form asp-action="Register" method="post" novalidate>
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="userName" class="form-label">Kullanıcı Adı</label>
            <input type="text" class="form-control" id="userName" name="userName" placeholder="Kullanıcı adınızı girin" />
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Email adresinizi girin" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Şifre</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin" />
        </div>

        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Şifre Tekrar</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Şifrenizi tekrar girin" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Login">Zaten bir hesabınız var mı? Giriş Yap</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
