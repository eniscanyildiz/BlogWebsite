@model Post
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Blog Yazısını Sil";
}

<h2>Blog Yazısını Sil</h2>

<div class="alert alert-warning">
    <strong>Dikkat!</strong> Bu blog yazısı kalıcı olarak silinecek. Emin misiniz?
</div>

<dl class="row">
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Kategori</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>

    <dt class="col-sm-2">Tarih</dt>
    <dd class="col-sm-10">@Model.CreatedAt</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>